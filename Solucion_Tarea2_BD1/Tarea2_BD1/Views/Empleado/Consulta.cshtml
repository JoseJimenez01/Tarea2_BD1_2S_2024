@model Empleado

@{
    ViewData["Title"] = "Consultar empleado";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>
    <h1>Borrar empleado</h1>

    <div class="form-floating">

        <form id="formConsultarEmpleado" method="post" asp-controller="Empleado" asp-action="">

            @* Sección para el valor de documentode identidad *@
            <div class="mt-3">
                <label>Valor del documento de identidad:</label>
                <input type="text" class="form-control" name="ValorDocumentoIdentidad" value="@Html.DisplayFor(modelItem => Model.ValorDocumentoIdentidad)" readonly>
            </div>

            @* Sección para el nombre *@
            <div class="mt-3">
                <label>Nombre:</label>
                <input type="text" class="form-control" name="Nombre" value="@Html.DisplayFor(modelItem => Model.Nombre)" readonly>
            </div>

            @* Sección para el puesto *@
            <div class="mt-3">
                <label>Puesto:</label>
                <input type="text" class="form-control" name="IdPuestoNavigation.Nombre" value="@Html.DisplayFor(modelItem => Model.IdPuestoNavigation.Nombre)" readonly>
            </div>

            @* Sección para el saldo vacaciones *@
            <div class="mt-3">
                <label>Saldo vacaciones:</label>
                <input type="text" class="form-control" name="SaldoVacaciones" value="@Html.DisplayFor(modelItem => Model.SaldoVacaciones)" readonly>
            </div>

        </form>

        <div class="mt-3" id="div-botones-consultarEmpleado">
            <button id="btnBackAgregar" class="btn btn-primary" onclick="location.href='@Url.Action("Listar", "Empleado")'">Regresar</button>
        </div>

    </div>
</body>
</html>