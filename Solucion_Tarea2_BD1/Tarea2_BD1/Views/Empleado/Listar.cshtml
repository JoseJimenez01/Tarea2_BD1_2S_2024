
@model IEnumerable<Tarea2_BD1.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}


<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>
    <h1>Lista de Empleados</h1>

    <div class="form-floating">
        <form id="formFiltrar" method="post" asp-controller="Empleado" asp-action="Filtrar" class="mt-3">
            <div id="div-filtrar">
                <input type="text" name="entradaStringFiltro" id="entFiltro" class="form-control" placeholder="Busqueda por nombre o valor de documento de identidad">
                <button type="submit" id="btnFiltro" class="btn btn-primary">Buscar</button>
            </div>
        </form>

        <div id="div-lista" class="mt-5">
            @Html.Partial("_VistaParcialFiltro", Model)
        </div>

        <form action="@Url.Action("Agregar", "Empleado")">
            <input type="submit" id="btnAgregar" class="btn btn-primary" value="Agregar">
        </form>
    </div>
</body>

</html>

