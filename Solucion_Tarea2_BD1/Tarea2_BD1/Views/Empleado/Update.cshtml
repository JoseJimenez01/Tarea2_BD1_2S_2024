
@model Empleado

@{
    ViewData["Title"] = "Actualizar empleado";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>
    <h1>Actualizar empleado</h1>

    <div class="form-floating">

        <form id="formActualizarEmpleado" method="post" asp-controller="Empleado" asp-action="">

            @* Sección para el valor de documentode identidad *@
            <div class="mt-3">
                <label asp-for="ValorDocumentoIdentidad">Valor del documento de identidad:</label>
                <input type="text" id="entValorDocIdentMov" class="form-control" name="ValorDocumentoIdentidad" value="@Html.DisplayFor(modelItem => Model.ValorDocumentoIdentidad)">
                <span asp-validation-for="ValorDocumentoIdentidad" id="spanValorDocIdent" class="text-danger"></span>
            </div>

            @* Sección para el nombre *@
            <div class="mt-3">
                <label asp-for="Nombre">Nombre:</label>
                <input asp-for="Nombre" type="text" id="entNombreMov" class="form-control" name="empleado.Nombre" value="@Html.DisplayFor(modelItem => Model.Nombre)">
                <span asp-validation-for="Nombre" id="spanValorDocIdent" class="text-danger"></span>
            </div>

            @* Sección para ingresar el puesto *@
            <div id="div-PartialView" class="mt-3">
                <label>Puesto:</label>
                <select id="selectListaPuestos" class="form-select" name="stringPuesto">
                    <option value="nada" selected disabled>Seleccione un puesto:</option>
                    <option value="Albañil">Albañil</option>
                    <option value="Asistente">Asistente</option>
                    <option value="Cajero">Cajero</option>
                    <option value="Camarero">Camarero</option>
                    <option value="Conductor">Conductor</option>
                    <option value="Conserje">Conserje</option>
                    <option value="Cuidador">Cuidador</option>
                    <option value="Fontanero">Fontanero</option>
                    <option value="Niñera">Niñera</option>
                    <option value="Recepcionista">Recepcionista</option>
                </select>
            </div>

        </form>

        <div class="mt-3" id="div-botones-agregarMovimiento">
            <button type="submit" id="btnAgregar" class="btn btn-primary" form="formActualizarEmpleado">Actualizar</button>
            <button id="btnBackAgregar" class="btn btn-primary" onclick="location.href='@Url.Action("Listar", "Empleado")'">Regresar</button>
        </div>

    </div>
</body>
</html>
